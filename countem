#!/usr/bin/env bash

if [ ! -z "${DEV_BASE// }" ]
then
  cd $DEV_BASE/py/pysloc
  
  rm -rf build/* 
  
  pySloc -L py  -X cover -X htmlcov -X dist -v $@ src/pysloc src/pySloc tests/test_aaa_comments.py tests/test_augeas_comments.py tests/test_could_be_generated.py tests/test_cpp_comments.py tests/test_css_comments.py tests/test_cython_comments.py tests/test_foo.py tests/test_fortran90_comments.py tests/test_fortran_comments.py tests/test_go_comments.py tests/test_gperf_comments.py tests/test_haskell_comments.py tests/test_html_comments.py tests/test_java_comments.py tests/test_json_comments.py tests/test_k.py tests/test_lisp_comments.py tests/test_matlab_comments.py tests/test_ocaml_comments.py tests/test_occam_comments.py tests/test_octave_comments.py tests/test_pascal_comments.py tests/test_perl_comments.py tests/test_protobuf_comments.py tests/test_python_comments.py tests/test_q.py tests/test_r_markdown_comments.py tests/test_re2c_comments.py tests/test_rust_comments.py tests/test_scala_comments.py tests/test_snobol_comments.py tests/test_tex_comments.py tests/test_toml_comments.py tests/test_txt_comments.py tests/test_uncomment_html.py tests/test_uncomment_java.py tests/test_user_guide.py tests/test_xml_comments.py setup.py
else
  echo "DEV_BASE is not defined"
fi
